<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Open+Sans+Condensed:300" rel="stylesheet">
    </head>
    <body>
        <div class = "container">
            <div class="jumbotron">
                <h1>{{ stylist.getName }}</h1>
                <h3>{{ stylist.getDescription }}</h3>
            </div>
            <div class=form-div>
                <form class="form-group" action="/stylists/{{ stylist.getId }}" method="post">
                    <label for="name">Add client name:</label>
                    <input type="text" name="name" placeholder="name">
                    <label for="phone">Add client phone:</label>
                    <input type="text" name="phone" placeholder="phone">
                    <button class="btn">Add client</button>
                </form>
                {% if clients is not empty %}
                    <div>
                        <ul>
                            {% for client in clients %}
                                <li><a href="/clients/{{client.getId()}}/edit">{{client.getName}} {{client.getPhone()}}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <a href="/stylists/{{ stylist.getId }}/edit"><button class="btn">Edit this stylist</button></a>

                <form id="delete-clients" class="form-group" action="/delete_clients" method="post">
                    <button class="btn" type="submit">Delete all clients</button>
                </form>

                <a href="/"><button class="btn">Home</button></a>
            </div>
        </div>
    </body>
</html>
