<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <div class = "container">
            <div class="jumbotron">
                <h1>{{ stylist.getName() }}</h1>
            </div>
            {% if stylists is not empty %}
            <h3>Available Stylists:</h3>
            <ul>
                {% for stylist in stylists %}
                <li><a href="/stylists/{{stylist.getId()}}">{{stylist.getName()}}</a></li>
                {% endfor %}
            </ul>
            {% endif %}
            <form class="form-group" action="add_stylist" method="post">
                <label for="name">Add Client name:</label>
                <input type="text" name="name" placeholder="name">
                <label for="phone">Add Client phone:</label>
                <input type="text" name="phone" placeholder="phone">
                <button class="btn">Add Client</button>
            </form>
        </div>
    </body>
</html>
